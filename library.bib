   keywords = {HaydenQuals,cortical damage,direction discrimination,motion perception,prefrontal cortex,visual attention,working memory},
   pages = {7095-7105},
   pmid = {25948260},
   title = {Unilateral Prefrontal Lesions Impair Memory-Guided Comparisons of Contralateral Visual Motion},
