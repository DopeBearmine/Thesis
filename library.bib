   issue = {1},
   journal = {Journal of Neurophysiology},
   pages = {152-162},
   pmid = {13679398},
   title = {Microstimulation of the Frontal Eye Field and Its Effects on Covert Spatial Attention},
   volume = {91},
   url = {http://jn.physiology.org/cgi/doi/10.1152/jn.00741.2002},
   year = {2003},
}
