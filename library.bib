   pages = {862-873},
   pmid = {27455897},
   publisher = {Elsevier USA},
   title = {Layer 3 Excitatory and Inhibitory Circuitry in the Prefrontal Cortex: Developmental Trajectories and Alterations in Schizophrenia},
